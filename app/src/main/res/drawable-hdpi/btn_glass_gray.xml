<?xml version="1.0" encoding="utf-8"?>
 <selector xmlns:android="http://schemas.android.com/apk/res/android">

     <item android:state_pressed="true" >

    <shape>
        <gradient 
            android:startColor="#232323"
            android:endColor="#232323"
            android:angle="90" />
       <stroke 
            android:width="1dp" 
            android:color="#E2BD00" />
        <corners 
            android:radius="3dp" />
    </shape>

</item>

    <item android:state_enabled="false" >

        <shape>
            <gradient
                android:startColor="#444444"
                android:endColor="#222222"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="#E2BD00" />
            <corners
                android:radius="3dp" />
        </shape>

    </item>
     
<item android:state_enabled="true" >
    <shape>
        <gradient 
            android:startColor="#212121"
            android:endColor="#444444"
            android:angle="90"/>
        <stroke 
            android:width="1dp" 
            android:color="#E2BD00" />
        <corners 
            android:radius="3dp" />
        
    </shape>
</item>


</selector>