<?xml version="1.0" encoding="utf-8"?>
 <selector xmlns:android="http://schemas.android.com/apk/res/android">

     <item android:state_pressed="true" >

    <shape>
        <gradient 
            android:startColor="#696969"
            android:endColor="#696969"
            android:angle="90" />
       <stroke 
            android:width="1dp" 
            android:color="#000000" />
        <corners 
            android:radius="3dp" />
    </shape>

</item>
     
     
<item android:state_enabled="false" >
    <shape>
        <gradient 
            android:startColor="#696969"
            android:endColor="#696969"
            android:angle="90"/>
        <stroke 
            android:width="0dp" 
            android:color="#00000000" />
        <corners 
            android:radius="3dp" />
        
    </shape>
</item>

<item android:state_enabled="true" >

    <shape>
        <gradient 
            android:startColor="#FFB200"
            android:endColor="#FFB200"
            android:angle="90" />
       <stroke 
            android:width="1dp"
            android:color="#EEEEEE" />
        <corners 
            android:radius="3dp" />
    </shape>

</item>

</selector>