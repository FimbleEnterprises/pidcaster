<?xml version="1.0" encoding="utf-8"?>
 <selector xmlns:android="http://schemas.android.com/apk/res/android">


<item android:state_pressed="true" >
<shape>
    <gradient
        android:startColor="#6686A0"
        android:endColor="#364959"
        android:angle="90" />
    <stroke
        android:width="1dp"
        android:color="#3A4D5D" />
    <corners
        android:radius="3dp" />
</shape>
</item>

    <item android:state_enabled="true" >
    <shape>
        <gradient 
            android:startColor="#9BE4FF" 
            android:endColor="#9BE4FF" 
            android:angle="90" />
       <stroke 
            android:width="1dp" 
            android:color="#3A4D5D" />
        <corners 
            android:radius="3dp" />
    </shape>

</item>
     
     
<item android:state_enabled="false" >
    <shape>
        <gradient 
            android:startColor="#6686A0" 
            android:endColor="#364959"  
            android:angle="90"/>
        <stroke 
            android:width="1dp" 
            android:color="#3A4D5D" />
        <corners 
            android:radius="3dp" />
    </shape>
</item>

</selector>