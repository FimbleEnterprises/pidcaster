<?xml version="1.0" encoding="utf-8"?>
 <selector xmlns:android="http://schemas.android.com/apk/res/android">

     <item android:state_pressed="true" >

    <shape>
        <gradient 
            android:startColor="#E58212"
            android:endColor="#E58212" 
            android:angle="90" />
       <stroke 
            android:width="1dp"
            android:color="#EE7420" />
        <corners 
            android:radius="3dp" />
    </shape>

</item>

<item android:state_enabled="false" >
    <shape>
        <gradient 
            android:startColor="#D8D8D8" 
            android:endColor="#D8D8D8"  
            android:angle="90"/>
        <stroke 
            android:width="1dp"
            android:color="#EE7420" />
        <corners 
            android:radius="3dp" />
        
    </shape>
</item>

<item android:state_enabled="true" >

    <shape>
        <gradient 
            android:startColor="#FFFFFF"
            android:endColor="#FFFFFF" 
            android:angle="90" />
       <stroke 
            android:width="1dp"
            android:color="#EE7420" />
        <corners 
            android:radius="3dp" />
    </shape>

</item>

</selector>