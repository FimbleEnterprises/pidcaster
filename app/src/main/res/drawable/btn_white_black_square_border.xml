<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <item android:state_pressed="true" >

        <shape>
            <gradient
                android:startColor="#FFFFFF"
                android:endColor="#11BBFF"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="#FFFFFF" />
            <corners
                android:radius="8dp" />
        </shape>

    </item>

    <item android:state_enabled="false" >

        <shape>
            <gradient
                android:startColor="#A7A7A7"
                android:endColor="#A7A7A7"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="#A7A7A7" />
            <corners
                android:radius="8dp" />
        </shape>

    </item>

    <item android:state_enabled="true" >
        <shape>
            <gradient
                android:startColor="#FFFFFF"
                android:endColor="#FFFFFF"
                android:angle="90"/>
            <stroke
                android:width="1dp"
                android:color="#FFFFFF" />
            <corners
                android:radius="8dp" />
        </shape>
    </item>


</selector>