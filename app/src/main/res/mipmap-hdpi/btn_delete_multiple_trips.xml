<?xml version="1.0" encoding="utf-8"?>
 <selector xmlns:android="http://schemas.android.com/apk/res/android">

     <item android:state_pressed="true" >

    <shape>
        <gradient 
            android:startColor="#FFFFFF" 
            android:endColor="#FFFFFF" 
            android:angle="90" />
       <stroke 
            android:width="1dp" 
            android:color="#000000" />
        <corners 
            android:radius="3dp" />
    </shape>

</item>
     
     
<item android:state_enabled="false" >
    <shape>
        <gradient 
            android:startColor="#557F0000" 
            android:endColor="#557F0000"  
            android:angle="90"/>
        <stroke 
            android:width="1dp" 
            android:color="#FFFFFF" />
        <corners 
            android:radius="3dp" />
        
    </shape>
</item>

<item android:state_enabled="true" >

    <shape>
        <gradient 
            android:startColor="#7F0000" 
            android:endColor="#7F0000" 
            android:angle="90" />
       <stroke 
            android:width="1dp" 
            android:color="#000000" />
        <corners 
            android:radius="3dp" />
    </shape>

</item>

</selector>