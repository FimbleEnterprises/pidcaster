<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
     <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#33E58212"
                android:endColor="#33E58212"
                android:angle="90" />
           <stroke
                android:width="1dp"
                android:color="#565656" />
            <corners
                android:radius="3dp" />
        </shape>
        <bitmap android:src="@drawable/ic_carot_right"></bitmap>
    </item>

    <item android:state_enabled="false" >
        <shape>

        </shape>
        <bitmap android:src="@drawable/ic_carot_right"></bitmap>
    </item>

    <item android:state_enabled="true" >
        <shape>

        </shape>
        <bitmap android:src="@drawable/ic_carot_right"></bitmap>
    </item>
</selector>